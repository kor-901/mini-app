<!DOCTYPE html>
<html>
  <head>
    <title>MiniBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="light-blue darken-1">
        <div class="nav-wrapper">
          <a href="#" class="brand-logo center">Mini Blog</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><%= link_to 'New Post', '', class: 'waves-effect waves-light btn light-blue darken-4' %></li>
            <li><%= link_to 'Login', '', class: 'waves-effect waves-light btn light-blue darken-4' %></li>
            <li><%= link_to 'Logout', '', class: 'waves-effect waves-light btn light-blue darken-4' %></li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="contents">
      <%= yield %>
    </div>
  </body>
</html>
