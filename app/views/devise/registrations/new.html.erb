<h3 class="center-align">Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="field input-field col s6 offset-s3">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s6 offset-s3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s6 offset-s3">
      <%= f.label :password %>
      <%# <% if @minimum_password_length %>
      <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s6 offset-s3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <%# <div class="actions center-align">
    <%= f.submit "Sign up" %>
  <%# </div> %>
  <div class="actions center-align">
    <div class="input-field col s8 offset-s2">
      <%= button_tag type: "submit", class: "waves-effect waves-light btn-large" do %>
      Sing Up
      <% end %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
